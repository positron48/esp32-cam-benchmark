[MASTER]
# Use multiple processes to speed up Pylint
jobs=0

# List of plugins to load
load-plugins=

# Allow loading modules/packages from top level directory
ignore=CVS,tests

# Files or directories matching the regex patterns are skipped
ignore-patterns=

# Python code to execute
init-hook=

# Control the amount of potential inferred values when inferring a single object
limit-inference-results=100

# Discover python modules and packages in the file system subtree
recursive=yes

# Add files or directories to the blacklist
ignore-paths=

[MESSAGES CONTROL]
disable=
    C0111, # missing-docstring
    C0103, # invalid-name
    C0301, # line-too-long (handled by black)
    C0302, # too-many-lines
    C0330, # wrong-hanging-indentation (handled by black)
    C0326, # bad-whitespace (handled by black)
    W0311, # bad-indentation (handled by black)
    W0511, # fixme
    R0903, # too-few-public-methods
    R0913, # too-many-arguments
    R0914, # too-many-locals
    R0915, # too-many-statements
    R0912, # too-many-branches
    R0801, # duplicate-code
    W0621, # redefined-outer-name (common with pytest fixtures)
    W0212, # protected-access
    W0603, # global-statement
    W0703, # broad-except
    W0702, # bare-except
    E1101, # no-member (often false positives with cv2)
    W1514, # unspecified-encoding (we use default utf-8)
    R1702  # too-many-nested-blocks

[FORMAT]
# Maximum number of characters on a single line
max-line-length=88

# Maximum number of lines in a module
max-module-lines=2000

# String used as indentation unit
indent-string='    '

[BASIC]
# Good variable names
good-names=i,j,k,ex,Run,_,id,fp,fn,x,y,z,e,f,n,m,cv,ip

# Regular expression which should only match function or class names
function-rgx=[a-z_][a-z0-9_]{2,50}$

# Regular expression which should only match correct variable names
variable-rgx=[a-z_][a-z0-9_]{2,50}$

[SIMILARITIES]
# Minimum lines number of a similarity
min-similarity-lines=10

# Ignore imports when computing similarities
ignore-imports=yes

[TYPECHECK]
# List of module names for which member attributes should not be checked
ignored-modules=numpy,cv2,torch,tensorflow

# List of classes names for which member attributes should not be checked
ignored-classes=numpy,cv2

[MISCELLANEOUS]
# List of note tags to take into consideration
notes=FIXME,XXX,TODO

[IMPORTS]
# Allow wildcard imports from modules that define __all__
allow-wildcard-with-all=no

[DESIGN]
# Maximum number of arguments for function / method
max-args=10

# Maximum number of locals for function / method body
max-locals=25

# Maximum number of return / yield for function / method body
max-returns=10

# Maximum number of statements in function / method body
max-statements=50

[CLASSES]
# List of method names used to declare (i.e. assign) instance attributes
defining-attr-methods=__init__,__new__,setUp

[EXCEPTIONS]
# Exceptions that will emit a warning when caught
overgeneral-exceptions=builtins.Exception 